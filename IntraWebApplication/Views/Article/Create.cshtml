@model IntraWebApp.Models.Article.CreateViewModel
@{
    ViewData["Title"] = "Créer un article";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
            <h4>Créer un article.</h4>
            <hr />
            @using (Html.BeginForm("Create", "Article", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    <label class="control-label">Titre</label>
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                        <label class="control-label">Contenu de l'article</label>
                        @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
                    </div>
                <div class="form-group">
                    <label class="control-label">Image</label>
                    @Html.TextBoxFor(model => model.Picture, new { type = "file", @class="form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Créer" class="btn btn-default" />
                </div>
            }
    </div>
</div>