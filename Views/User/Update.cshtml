@model IntraWebApp.Models.User.UpdateViewModel
@{
    ViewData["Title"] = "Mon compte";
    var data = ViewBag.UserInfo;
}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData[" ReturnUrl"]" method="post">
            <h4>Informations sur votre compte.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName">Nom</label>
                <input asp-for="FirstName" class="form-control" value="@(data == null ? string.Empty : data.FirstName)"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LastName">Prénom</label>
                <input asp-for="LastName" class="form-control" value="@(data == null ? string.Empty : data.LastName)"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword">Nouveau mot de passe</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword">Confirmer le nouveau mot de passe</label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Modifier</button>
        </form>
    </div>
</div>