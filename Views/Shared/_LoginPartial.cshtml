@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
    <form asp-area="" asp-controller="User" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="User" asp-action="Update" title="Manage">Hello @User.Identity.Name !</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Deconnexion</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="User" asp-action="Register">S'inscrire</a></li>
        <li><a asp-area="" asp-controller="User" asp-action="Login">Connexion</a></li>
    </ul>
}
