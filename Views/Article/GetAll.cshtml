@model IEnumerable<IntraWebApp.Models.Article.ArticleDetailsViewModel>
@{
    ViewData["Title"] = "Tous les articles";
}
<h2>@ViewData["Title"]</h2>
@if (Model != null)
{
    <div class="row">
        <div class="col-lg-12">

            <div class="alert alert-warning">@Model.ToList().Count articles</div>
        </div>
        @foreach (var item in Model)
        {
        <div class="col-lg-3 col-md-4 col-xs-6 thumb">

            <a href = "@Url.Action("GetDetails", "Article" ,new { id=item.Id })" class="thumbnail">
                <img class="img-responsive" src="@item.ImageUrl" style="height: 300px;width:100%;" alt="">
            </a>
            <a href = "@Url.Action("GetDetails", "Article" ,new { id=item.Id })" class="btn btn-default btn-block">
                <span aria-hidden="true">@item.Title</span>
            </a>

        </div>


        }
    </div>

}
